@model IEnumerable<SismaV02.Models.Periodo>
@section AddToHead{
    <link href="@Url.Content("~/Content/AdminLTE/plugins/datatables/dataTables.bootstrap.css")" rel="stylesheet" type="text/css" />
    <link href="~/Content/AdminLTE/css/skins/_all-skins.min.css" rel="stylesheet" />
}
@{
    ViewBag.Title = "Periodos";
}

<h2>Periodos</h2>

<p>
    @Html.ActionLink("Nuevo", "Create")
</p>
<div class="box">
    <div class="box-header">
        <h3 class="box-title">Estado de Servicio</h3>
    </div>

    <div class="box-body">
        <table id="listaModelo" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaInicio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaFin)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CantidadDias)
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaInicio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaFin)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CantidadDias)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.CodPeriodo }) |
                            @Html.ActionLink("Detalles", "Details", new { id = item.CodPeriodo }) |
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.CodPeriodo })
                        </td>
                    </tr>
                }

            </tbody>

            <tfoot>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaInicio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaFin)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CantidadDias)
                    </th>
                    <th></th>
            </tfoot>
        </table>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/DataTable")
}

